#Create sonar.properties file

# Required metadata
sonar.projectKey=${REPO_NAME}
sonar.projectName=${REPO_NAME}
sonar.projectVersion=1.0
sonar.scm.enabled=false

# Comma-separated paths to directories with sources (required)
sonar.sources=lib
sonar.tests=spec

# Language
sonar.language=js
sonar.profile=node

sonar.javascript.jstestdriver.reportsPath=xunit-reports
sonar.javascript.lcov.reportPath=coverage/lcov.info

# Encoding of the source files
sonar.sourceEncoding=UTF-8
sonar.analysis.mode=${SONAR_ANALYSIS}
sonar.issuesReport.html.enable=true
sonar.projectDescription=Insert git log stuff here

